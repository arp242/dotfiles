""" Random stuff/ideas
""""""""""""""""""""""

" Open help in cmdline on F1 without closing cmdline.
fun! s:cmdline_f1() abort
    if getcmdtype() isnot# ':'
        return
    endif

    let cmdlist = getcmdline()->split(' ')
    if len(cmdlist) is# 0
        return
    endif
    let cmd = findcommand(trim(cmdlist[0]))
    if cmd is# ''
        return
    end

    let so = &scrolloff
    try
        set scrolloff=0  " Reset it shows as much as possible.

        let tag = ':' .. cmd
        if len(cmdlist) > 1
            if cmd[:2] is# 'set'
                let tag = printf("'%s'", split(cmdlist[1], '=')[0])
            elseif cmd is# 'syntax'
                let tag = printf(":syn-%s", cmdlist[1])
            elseif cmd is# 'autocmd'
                let tag = cmdlist[1]
            endif
        endif

        try
            exe ':help ' .. tag
        catch /E149/
            return
        endtry

        augroup cmdline_f1
            au!
            exe printf("autocmd CmdlineLeave * ++once exe %d .. 'wincmd c'", winnr())
        augroup end

        wincmd w
        redraw
    finally
        let &scrolloff = so
    endtry
endfun
cnoremap <F1> <Cmd>:call <SID>cmdline_f1()<CR>


" vim: et
