let &statusline .= '%='                " Right-align from here on.
let &statusline .= ' [line %l of %L]'  " current line, total lines.
let &statusline .= ' [col %v]'         " column.
let &statusline .= ' [0x%B]'           " Byte value under cursor.

hi X guibg=#999999 guifg=white
